</div>

<script src="https://rawgit.com/outboxcraft/beauter/master/beauter.min.js"></script>
<script>
  function toTab(tabName) {
    location.hash = tabName
    console.log(location.hash)
    opentab(tabName)
  }
  function initTab() {
    if(location.hash) {
      toTab(location.hash.replace('#', ''))
    } else {
      toTab('tab1')
    }
  }
  initTab()
</script>
